<div class="container mt-4">

    <h3 class='mb-5'>Crie sua conta agora!</h3>

    <div class="card">
        <div class="card-body">
            <form action="" method='POST'>
                <label for="nome">Nome: </label>
                <input type="text" name='nome' class='form-control' required>
                <label for="email" class='mt-2'>Email: </label>
                <input type="email" name='email' class='form-control' required>
                <label for="senha" class='mt-2'>Senha: </label>
                <input type="password" name='senha' class='form-control' required>
                <label for="senha2" class='mt-2'>Repita sua senha: </label>
                <input type="password" name='senha2' class='form-control' required>
                <button class='mt-3 btn btn-success'>Criar Conta</button>
            </form>
        </div>
    </div>
</div>