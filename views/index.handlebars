<div class="container mt-4">
  <h2>Postagens Recentes: </h2>

  {{#each postagens}}
  <div class='card mt-4'>
    <div class="card-body">

      <h3>{{titulo}}</h3>
      <p>{{descricao}}</p>
      <a href="/postagem/{{slug}}"><button class='btn btn-success'>Leia mais</button></a>
      <hr>
      <small>Categoria: {{categoria.nome}}</small>
      <small>Data de publicação: {{date}} </small>
    </div>
  </div>
  {{else}}
  <h5>Nenhuma postagem</h5>
  {{/each}}
</div>